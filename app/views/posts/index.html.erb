

<% content_for :title, "Posts" %>

  <div class="container">

  <div class="text-center my-3">

    <p style="color: green"><%= notice %></p>

  </div>


    <div class="d-flex my-5 align-items-center justify-content-between">

        <h1>Latest posts</h1>

        <% if current_user %>
        <%= link_to "New post", new_post_path, class: "btn btn-primary text-white" %>
        <% else %>
        <%= link_to "New post", new_user_session_path, class: "btn btn-primary text-white" %>
        <% end %>

    </div>

    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-4" id="posts">

        <% @posts.each do |post| %>

        <div>
            <%= render post %>
        </div>

        <% end %>

    </div>


</div>